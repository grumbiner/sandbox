SHELL=/bin/sh
#
SRCS=	WGTMKR.f POLATWGT_nneighbor.f w3fi63.f w3fi71.f 

OBJS=	WGTMKR.o POLATWGT_nneighbor.o w3fi63.o w3fi71.o

# Tunable parameters
#
# CF		Name of the fortran compiling system to use
# LDFLAGS	Flags to the loader
# LIBS		List of libraries
# CMD		Name of the executable
# PROFLIB	Library needed for profiling
#



CF =		xlf90
LDFLAGS = -bmaxdata:2000000000 -bmaxstack:256000000 -bmap:map -bloadmap:lm
LIBS =          -L/usr/local/lib -lessl -lmass /nwprod/w3lib90/w3lib_4  \
      /nwprod/w3lib90/iplib_4 /nwprod/w3lib90/splib_4 /nwprod/w3lib90/bacio_4
CMD =		wgtmkr.x
PROFLIB =	-lprof

# To perform the default compilation, use the first line
# To compile with flowtracing turned on, use the second line
# To compile giving profile additonal information, use the third line
# WARNING:  SIMULTANEOUSLY PROFILING AND FLOWTRACING IS NOT RECOMMENDED 
FFLAGS = -O3 -qarch=pwr3 -qstrict -qrealsize=4 -qmaxmem=-1 -qsource -qxref=full -qattr -qnosave -qspillsize=548 -bmap:map -bloadmap:lm

# Lines from here on down should not need to be changed.  They are the
# actual rules which make uses to build awprgn.xc.
#
all:		$(CMD)

$(CMD):		$(OBJS)
	$(CF) $(LDFLAGS) -o $(@) $(OBJS) $(LIBS)

# Make the profiled version of the command and call it awprgn.xc.prof
#
$(CMD).prof:	$(OBJS)
	$(CF) $(LDFLAGS) -o $(@) $(OBJS) $(PROFLIB) $(LIBS)

clean:
	-rm -f $(OBJS) $(CMD) *.lst *.o

clobber:	clean
	-rm -f $(CMD) $(CMD).prof

void:	clobber
	-rm -f $(SRCS) makefile
