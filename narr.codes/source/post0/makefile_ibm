F77=xlf
FC  = xlf
CPP = /lib/cpp -P
#
CPPFLAGS =
FFLAGS =-O3 -qarch=pwr3 -qstrict -qrealsize=4 -qmaxmem=-1 -qsource -qxref=full \
           -qattr -qspillsize=930 -bloadmap:lm -g
LDFLAGS = -bD:2000000000 -bmap:map  -bmaxstack:2000000000
LIBS = -L/usr/local/lib -lessl /nwprod/w3lib90/w3lib_4_pwr3

LIBS= 
 
TARGET = post0.x

OBJS=   POST0.o PROF.o BCEX.o HORIZ.o PTETAE.o
 
.SUFFIXES:	.F .f .o

.F.f:
	$(CPP) $(CPPFLAGS) $< > $*.f
 
$(TARGET):	$(OBJS)
		$(FC) $(FFLAGS) $(LDFLAGS) $(LIBS) -o $@ $(OBJS)

clean:	
	/bin/rm -f  $(OBJS) *.lst
