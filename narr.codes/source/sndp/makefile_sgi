SHELL=/bin/sh
F77=f90
#
SRCS=	BFRHDR.f BFRIZE.f CALHEL.f CALWXT.f SMIX.f SNDPST.f VAP.f \
        WETBLB.f CALVIS.f 

OBJS=	BFRHDR.o BFRIZE.o CALHEL.o CALWXT.o SMIX.o SNDPST.o VAP.o \
        WETBLB.o CALVIS.o 

# Tunable parameters
#
# FC		Name of the fortran compiling system to use
# LDFLAGS	Flags to the loader
# LIBS		List of libraries
# CMD		Name of the executable
# PROFLIB	Library needed for profiling
#
FC =		/usr/bin/f90
# LDFLAGS = -bD:2000000000 -bmap:map  -bmaxstack:256000000  -bloadmap:lm
LDFLAGS =
CMD =		sndp.x
PROFLIB =	-lprof


# LIBS =          -L/usr/local/lib -lessl -lmass /nwprod/w3lib90/w3lib_4_604  \
#      /nwprod/bufrlib90/bufrlib_4_604

LIBS = /groupB/users/pshaf/lib/w3lib.a /groupB/users/pshaf/lib/bufrlib.a

# FFLAGS = -O -qarch=604 -qrealsize=4 -qmaxmem=-1 -qsource -qxref=full -qattr -qspillsize=548  -g

FFLAGS = -O2
# Lines from here on down should not need to be changed.  They are the
# actual rules which make uses to build a.out.
#
all:		$(CMD)

$(CMD):		$(OBJS)
	$(FC) $(LDFLAGS) -o $(@) $(OBJS) $(LIBS)

# Make the profiled version of the command and call it a.out.prof
#
$(CMD).prof:	$(OBJS)
	$(FC) $(LDFLAGS) -o $(@) $(OBJS) $(PROFLIB) $(LIBS)

clean:
	-rm -f $(OBJS)

clobber:	clean
	-rm -f $(CMD) $(CMD).prof

void:	clobber
	-rm -f $(SRCS) makefile
