         24 |C                ERRMSG(1) = 'THIS IS A EXAMPLE OF SUBROUTINE ERR'
         25 |C                ERRMSG(2) = 'STOP.  THE MESSAGE SHOULD BE 2 LINE'
         26 |C                ERRMSG(3) = 'S OF 70 CHARACTERS EACH.           '
         27 |C                ERRMSG(4) = '                                   '
         28 |C
         29 |C                CALL ERRSTOP (6, ERRMSG)
         30 |C
         31 |C ATTRIBUTES:
         32 |C   LANGUAGE:  FORTRAN.
         33 |C   MACHINE:   CRAY Y-MP
         34 |C
         35 |C$$$
         36 |C
         37 |C
         38 |      IMPLICIT REAL (A-H, O-Z)
         39 |C
         40 |      CHARACTER*35 ERRMSG1(2)
         41 |      CHARACTER*1  ERRMSG2(70, 2)
         42 |C
         43 |C
         44 |C
         45 |      IERRLEN2 = 70
         46 |C
         47 |C
         48 |C              WRITE A MESSAGE TO THE OUTPUT FILE.
         49 |      WRITE (IOUTUPRT,  100) ((ERRMSG2(I,J), I=1,IERRLEN2), J=1,2)
         50 |  100 FORMAT ('0', 'THE EXECUTION OF THIS CONTROLLEE WILL BE ',
         51 |     1             'ABORTED BECAUSE OF A FATAL ERROR.'/
