#IBM
CC=xlC
CFLAGS=-DIBM -O2 
#-pg 
#-DVERBOSE 
#-DVERBOSE2 
INCDIR=shorelines -Immab.include

#LINUX
CC=g++
CFLAGS=-Wall -DLINUX -O2 -DFLIP 
#-pg 
#-DVERBOSE -DVERBOSE2 
INCDIR=shorelines

#Common
#TARGET=global_ice
TARGET=global_12th
FAMILY=llgrid

# No changes below here -------------------------------------------
all : refill bathy 

refill : refill.C geometry.C makefile
	$(CC) $(CFLAGS) refill.C -DFAMILY=$(FAMILY) -DTARGET=$(TARGET) -I$(INCDIR) -o refill /usr/local/lib/libcppf

bathy : bathy.C
	$(CC) $(CFLAGS) bathy.C -DTARGET=$(TARGET) -I$(INCDIR) -o bathy /usr/local/lib/libcppf

